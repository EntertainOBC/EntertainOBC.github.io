<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.Bobatv"
       name="Boba TV"
       version="0.0.1"
       provider-name="EntertainOBC Company">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
    <import addon="script.module.requests"/>
  </requires>
  <extension point="xbmc.python.pluginsource"
            library="default.py">
        <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Making the best Iptv provider.</summary>
    <language>en</language>
    <description lang="en">Live tv addon for free! Opened for everyone.</description>
     <platform>all</platform>
  </extension>
</addon>
